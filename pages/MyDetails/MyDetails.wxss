/* pages/MyDetails/MyDetails.wxss */
.Head{
  padding-top: 72rpx;
  padding-bottom: 45rpx;
  /* background-color: green; */
  height: 440rpx;
}
.myProfile{
  display: flex;
}
.HeadPortrait{
  width: 140rpx;
  height: 140rpx;
  border-radius: 250rpx;
  margin: 0rpx 46rpx 0rpx 30rpx;
}
.specific{
  color:rgba(255,255,255,1);
  font-family:PingFangSC;
}
.levelView{
  display: flex;
  margin-top: 25rpx;
}
.specific .name{
  font-size:32rpx;
  font-weight:600;
  line-height:32rpx;
}
.specific .level{
  font-size:24rpx;
  font-weight:400;
  margin-right: 23rpx;
}
.specific .label{
  font-size:24rpx;
  font-weight:400;
  width:137rpx;
  background:rgba(209,156,49,1);
  border-radius:18rpx;
  text-align: center;
  line-height: 36rpx;
}
.LevelProgressBar{
  margin-top: 10rpx;
}
.myProfile .text{
  width:228rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  opacity: 0.5;
  margin-top: 9rpx;
}
.season{
  display: flex;
  margin-top: 34rpx;
  margin-bottom: 45rpx;
}
.season .IntegralSeason{
  width:240rpx;
  height:130rpx;
  background:rgba(31,204,102,1);
  border-radius:8rpx;
  margin-left: 214rpx;
}
.season .TotalScore{
  width:240rpx;
  height:130rpx;
  background:rgba(238,176,50,1);
  border-radius:8rpx;
  margin-left: 26rpx;
  margin-right: 30rpx;
}
.season .Integral{
  width:80rpx;
  height:20rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  opacity: 0.5;
  margin: 15rpx 0rpx 5rpx 18rpx;
}
.season .Number{
  font-size:36rpx;
  font-family:PingFangSC;
  font-weight:600;
  color:rgba(255,255,255,1);
  margin: 0rpx 0rpx 10rpx 18rpx;
  width:108rpx;
  height:36rpx;
}
.season .ranking{
  width:93rpx;
  height:20rpx;
  font-size:24rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 18rpx;
  margin-bottom: 19rpx;
}

/* 战绩 */
.record{
  width: 100%;
  height: 288rpx;
  background:rgba(60,60,70,1);
  border-radius:80rpx 0rpx 0rpx 0rpx;
  margin-top: -135rpx;
  color:rgba(255,255,255,1);
  display: flex;
  text-align: center;
}
.record .NumberChallenges{
  width: 249rpx;
  height: 116rpx;
  margin: 50rpx 0rpx 50rpx 0rpx;
  border-right: 2rpx solid rgba(78,78,91,1);
}
.record .NumberVictory{
  width: 248rpx;
  height: 116rpx;
  margin: 50rpx 0rpx 50rpx 0rpx;
  border-right: 2rpx solid rgba(78,78,91,1)
}
.record .InterestRates{
  width: 249rpx;
  height: 116rpx;
  margin: 50rpx 0rpx 50rpx 0rpx;
}
.NumberVictory .Number{
  display: flex;
  margin: 8rpx 0rpx 0rpx 52rpx;
}
.InterestRates .Number{
  display: flex;
  margin: 8rpx 0rpx 0rpx 52rpx;
}
.record .Number{
  margin-bottom: 20rpx;
  width:100%;
  height:60rpx;
  font-size:60rpx;
  font-family:PingFangSC;
  font-weight:500;
  text-align: center;
}
.record .Text{
  width:100%;
  height:28rpx;
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
}
.record .Number .rate{
  line-height: 110rpx;
  font-size: 20rpx;
}

.InterestRates .Number .rate{
  line-height: 110rpx;
  font-size: 20rpx;
}

/* 个人中心菜单 */
.menu{
  display: flex;
  flex-wrap: wrap;
  border-radius:80rpx 0rpx 0rpx 0rpx;
  margin-top: -80rpx;
  background-color: #26262D;
}
.menuSingle{
  margin: 65rpx 65rpx 0rpx 75rpx;
}
.menuSingle .MenuFigure{
  width: 100rpx;
  height: 100rpx;
}
.menuSingle .menuName{
  width:100%;
  text-align: center;
  height:28rpx;
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-top: 22rpx;
}

