/* pages/MyDetails/MyDetails.wxss */
.Head{
  margin-top: 72rpx;
  background-color: green;
}
.myProfile{
  display: flex;
}
.HeadPortrait{
  width: 140rpx;
  height: 140rpx;
  border-radius: 250rpx;
  margin: 0rpx 46rpx 0rpx 30rpx;
}
.specific{
  color:rgba(255,255,255,1);
  font-family:PingFangSC;
}
.levelView{
  display: flex;
  margin-top: 31rpx;
}
.specific .name{
  font-size:32rpx;
  font-weight:600;
  line-height:32rpx;
}
.specific .level{
  font-size:24rpx;
  font-weight:400;
  margin-right: 23rpx;
}
.specific .label{
  font-size:24rpx;
  font-weight:400;
  width:137rpx;
  height:36rpx;
  background:rgba(209,156,49,1);
  border-radius:18rpx;
  text-align: center;
  line-height: 36rpx;
}
.LevelProgressBar{
  margin-top: 10rpx;
  opacity:0.2;
}
.myProfile .text{
  width:228rpx;
  height:20rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  opacity: 0.5;
  margin-top: 9rpx;
}
.season{
  display: flex;
  margin-top: 34rpx;
  margin-bottom: 45rpx;
}
.season .IntegralSeason{
  width:240rpx;
  height:130rpx;
  background:rgba(31,204,102,1);
  border-radius:8rpx;
  margin-left: 214rpx;
}
.season .TotalScore{
  width:240rpx;
  height:130rpx;
  background:rgba(238,176,50,1);
  border-radius:8rpx;
  margin-left: 26rpx;
  margin-right: 30rpx;
}
.season .Integral{
  font-size:20rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  opacity: 0.5;
  margin: 20rpx 0rpx 5rpx 18rpx;
}
.season .Number{
  font-size:36rpx;
  font-family:PingFangSC;
  font-weight:600;
  color:rgba(255,255,255,1);
  margin: 0rpx 0rpx 10rpx 18rpx;
}
.season .ranking{
  font-size:24rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-left: 18rpx;
}