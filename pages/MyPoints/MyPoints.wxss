  height: 144rpx;
  margin: 0rpx 0rpx 0rpx 30rpx;
}
.gamesView image{
  width: 84rpx;
  height: 84rpx;
  margin: 30rpx 26rpx 30rpx 30rpx;
}
.gamesView .game{
  margin: 30rpx 0rpx 30rpx 0rpx;
}
.gamesView .gameText{
