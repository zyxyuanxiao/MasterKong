/* 切换框 */
.SwitchBox{
  height: 72rpx;
  width: 100%;
  margin-top: 40rpx;
  padding-left: 30rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(75,75,76,1);
}
/* 选择 */
.SwitchBox .choose{
  text-align: center;
  font-size:32rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(31,204,102,1);
  line-height:72rpx;
  width: 345rpx;
  border-bottom: 3rpx solid rgba(31,204,102,1);
  border-radius:2px;
}
/* 未选择 */
.SwitchBox .NotChoose{
  font-size:32rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:72rpx;
  width: 345rpx;
  text-align: center;
  opacity: 0.5;
}
