/*主容器*/  
.stepper {   
    width:186rpx;
    height:60rpx;
    border-radius:8rpx;
    border:2rpx solid rgba(90,90,102,1);
    margin-top:6rpx;
}  
  
/*加号和减号*/  
.stepper text {   
    width:  60rpx;
    text-align: center;  
    float: left; 
    font-size:40rpx;
    font-family:PingFangSC;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:60rpx;
}  
  
/*数值*/  
.stepper input { 
    width:  62rpx;
    float: left;  
    margin: 0 auto;  
    text-align: center;
    /*给中间的input设置左右边框即可*/  
    border-left: 2rpx solid rgba(90,90,102,1);
    border-right: 2rpx solid rgba(90,90,102,1);
    font-size:28rpx;
    height: 100%;
}  
  
/*普通样式*/  
.stepper .normal{  
    color:rgba(255,255,255,1);  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  
