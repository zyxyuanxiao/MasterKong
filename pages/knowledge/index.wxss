/**index.wxss**/
.container{
  color: #FFFFFF;
  margin-top: 3.02%;
}
.problem{
  margin-left: 4%;
  margin-right: 4%;
  font-size: 32rpx;
  background: #3C3C46;
  padding: 15px;
  margin-bottom: 15px;
  height: 35pt;
}


/* 弹出层 */
.modalDlg{
    width: 300px;
    height: 365px;
    position: fixed;
    top: 40pt;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    border-radius:8rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #FFFFFF;
}

.problemTwo{
  font-size: 32rpx;
  margin: 30rpx 37rpx 0rpx 37rpx;
}

.answer{
  font-size: 48rpx;
  margin: 158rpx 0rpx 88rpx 0rpx;
  position: absolute;
  left: 37rpx;
}

.instructions{
  background-image: url('');
  font-size: 24rpx;
  margin: 205rpx 23rpx 0rpx 37rpx;
}

/* 弹出层里面的按钮 */
.ok{
  width: 57.33%;
  height: 10.95%;
  border: 1px solid #FFFFFF;
  line-height: 28pt;
  text-align: center;
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 25pt;
  position: absolute;
  bottom: 30px;
}

/* 弹出层里面的文字 */

.drawer_screen {  

  width: 100%;  

  height: 100%;  

  position: fixed;  

  top: 0;  

  left: 0;  

  z-index: 1000;  

  background: #000;  

  opacity: 0.5;  

  overflow: hidden;  

}  
