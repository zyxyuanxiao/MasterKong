page{
  background:linear-gradient(181deg,rgba(128,191,145,1) 0%,rgba(73,139,88,1) 100%);
}

.blueTeam{
  display: flex;
  justify-content: center;  
  margin-top: 130rpx;
}
.yellowTeam{
  display: flex;
  justify-content: center;  
  margin-bottom: 300rpx;
}
.blueTeam .people{
  width:220rpx;
  height:280rpx;
  border-radius:8rpx;
  border:2rpx solid rgba(255,255,255,0.5);
  margin-right: 15rpx;
}
.yellowTeam .people{
  width:220rpx;
  height:280rpx;
  border-radius:8rpx;
  border:2rpx solid rgba(255,255,255,0.5);
  margin-right: 15rpx;
}
.HeadPortrait{
  width: 80rpx;
  height: 80rpx;
  border-radius: 150rpx;
  margin: 30rpx 68rpx 0rpx 72rpx;
}
.name{
  font-size:28rpx;
  font-family:PingFangSC;
  color:rgba(255,255,255,1);
  text-align: center;
  margin-top: 15rpx;
}
.level{
  font-size:24rpx;
  font-family:PingFangSC;
  color:rgba(255,255,255,1);
  text-align: center;
  margin-top: 10rpx;
}
.TheLabel{
  font-size:24rpx;
  font-family:PingFangSC;
  color:rgba(255,255,255,1);
  width:137rpx;
  height:36rpx;
  background:rgba(238,121,50,1);
  border-radius:18rpx;
  text-align: center;
  margin-top: 10rpx;
