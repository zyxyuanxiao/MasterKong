.page-container {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

.page-container .image {
  z-index: -1;
  display: block;
  position: absolute;
  left: 0;
  width: 100%;
  opacity: 1;
}

.page-container .img-top {
  z-index: -2;
  top: 0;
  height: 675rpx;
}

.page-container .img-bot {
  bottom: 0;
  height: 100rpx;
}

.page-container .img-bot1 {
  bottom: 0;
  height: 360rpx;
}

.page-container .page-content {
  box-sizing: border-box;
  position: relative;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.page-container .header {
  z-index: 10;
  position: relative;
  top: -25rpx;
  left: 0;
  text-align: center;
  overflow: hidden;
}

.page-container .header .img {
  z-index: 10;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 32rpx;
  height: 48rpx;
  padding: 0 22rpx;
}

.page-container .header .title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  color: #fff;
}

.page-container .text-left {
  padding-left: 38rpx;
  text-align: left;
}

.defind-container .img-top {
  z-index: 1;
}
