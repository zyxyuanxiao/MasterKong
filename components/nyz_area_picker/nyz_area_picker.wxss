.hide{
  display: none;
}

.show{
  display: block;
}

.nyz_area_view_btns{
  width:750rpx; 
  height:88rpx;
  font-size:28rpx;
  background:rgba(60,60,70,1);
  line-height: 88rpx;
}

.nyz_area_view_btns>text{
  display: inline-block;
  word-spacing: 4rpx;
  letter-spacing: 4rpx;
}

.nyz_area_view_btn_cancle{  
  /* 111 */
  color: rgba(255,255,255,1);
  padding-left: 30rpx;
  font-weight:400;
}

.nyz_area_view_btn_sure{
  float: right;
  padding-right: 30rpx;
  /* 1111 */
  color:rgba(31,204,102,1);
  font-weight:400;
}

.nyz_area_mask{
  width: 100%;
  height: 100vh;
  /* 111 */
  background:rgba(0,0,0,1);
  opacity: 0.5;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 20;
}